@model IEnumerable<Weeklyapp.DataLayer.Entities.PrenotazioneEntity>

@{
    ViewData["Title"] = "Prenotazioni";
}

<h2>Lista Prenotazioni</h2>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Crea Nuova Prenotazione</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Codice Fiscale Cliente</th>
            <th>Numero Camera</th>
            <th>Data Prenotazione</th>
            <th>Numero Progressivo Anno</th>
            <th>Anno</th>
            <th>Periodo Dal</th>
            <th>Periodo Al</th>
            <th>Caparra Confirmatoria</th>
            <th>Tariffa</th>
            <th>Dettagli</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.CodiceFiscaleCliente</td>
                <td>@item.NumeroCamera</td>
                <td>@item.DataPrenotazione.ToString("yyyy-MM-dd")</td>
                <td>@item.NumeroProgressivoAnno</td>
                <td>@item.Anno</td>
                <td>@item.PeriodoDal.ToString("yyyy-MM-dd")</td>
                <td>@item.PeriodoAl.ToString("yyyy-MM-dd")</td>
                <td>@item.CaparraConfirmatoria</td>
                <td>@item.Tariffa</td>
                <td>@item.Dettagli</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-sm">Modifica</a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">Elimina</a>
                        <a asp-controller="Checkout" asp-action="Details" asp-route-id="@item.ID" class="btn btn-info btn-sm">Checkout</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .btn-group .btn {
        min-width: 80px;
    }
</style>
