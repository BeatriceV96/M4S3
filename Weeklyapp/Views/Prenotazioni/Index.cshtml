@model IEnumerable<Weeklyapp.DataLayer.Entities.PrenotazioneEntity>

@{
    ViewData["Title"] = "Prenotazioni";
}

<h2>Lista Prenotazioni</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Crea Nuova Prenotazione</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Codice Fiscale Cliente</th>
            <th>Numero Camera</th>
            <th>Data Prenotazione</th>
            <th>Numero Progressivo Anno</th>
            <th>Anno</th>
            <th>Periodo Dal</th>
            <th>Periodo Al</th>
            <th>Caparra Confirmatoria</th>
            <th>Tariffa</th>
            <th>Dettagli</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.CodiceFiscaleCliente</td>
                <td>@item.NumeroCamera</td>
                <td>@item.DataPrenotazione.ToString("yyyy-MM-dd")</td>
                <td>@item.NumeroProgressivoAnno</td>
                <td>@item.Anno</td>
                <td>@item.PeriodoDal.ToString("yyyy-MM-dd")</td>
                <td>@item.PeriodoAl.ToString("yyyy-MM-dd")</td>
                <td>@item.CaparraConfirmatoria</td>
                <td>@item.Tariffa</td>
                <td>@item.Dettagli</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning">Modifica</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
