@model Weeklyapp.DataLayer.Entities.CameraEntity

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title text-center">Elimina Camera</h3>
                    <form asp-action="DeleteConfirmed">
                        <div class="form-group">
                            <label asp-for="Numero" class="form-label"></label>
                            <input asp-for="Numero" class="form-control" readonly />
                        </div>
                        <div class="form-group">
                            <label asp-for="Descrizione" class="form-label"></label>
                            <input asp-for="Descrizione" class="form-control" readonly />
                        </div>
                        <div class="form-group">
                            <label asp-for="Tipologia" class="form-label"></label>
                            <input asp-for="Tipologia" class="form-control" readonly />
                        </div>
                        <div class="text-center">
                            <input type="submit" value="Elimina" class="btn btn-danger mt-3" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: scale(1.02);
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        }

    .form-label {
        font-weight: bold;
    }

    .text-center {
        text-align: center;
    }
</style>
